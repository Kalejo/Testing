<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">


      <h2>Inscription</h2>
      <div class="container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    </div>

      <div class="form-group">
        <%= f.text_field :firstname, autofocus: true, class: "form-control", placeholder: "prénom  " %>
      </div>

       <div class="form-group">
        <%= f.text_field :lastname, autofocus: true, class: "form-control", placeholder: "Nom de famille " %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Créer un mot de passe" %>
      </div>

      <div class="actions">
        <%= f.submit "Inscription", class: "btn btn-primary" %>
      </div>
      <% end %>

  </div>
</div>
